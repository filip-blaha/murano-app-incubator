FormatVersion: 2.0.0
Version: 1.0.0
Name: Deploy App over Tomcat

Parameters:
  warLocation: $warLocation

Body: |
  return installApp('{0}'.format(args.warLocation)).stdout

Scripts:
  installApp:
    Type: Application
    Version: 1.0.0
    EntryPoint: deployTomcatApp.sh
    Files:
      - <installer.sh>
      - <common.sh>
    Options:
      captureStdout: true
      captureStderr: true
